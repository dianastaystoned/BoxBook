<div class="modal fade" tabindex="-1" id="markProgressModal{{id}}">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Mark your progress in {{title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form action="/book/markprogress/{{id}}" method="POST">
            <div class="form-group">
                <input type="number" name="progress" placeholder="Put your progress in percent" class="form-control" required>
            </div>
            <div class="form-group">
                <textarea name="review" placeholder="Let us know what you think..." class="form-control" required></textarea>
            </div>
            <div class="form-group" required>
                <label for="score">Score</label>
                <select name="score"  class="form-control">
                    <option value="1">So bad</option>
                    <option value="2">Bad</option>
                    <option value="3">Good</option>
                    <option value="4">So good</option>
                    <option value="5">Excellent</option>
                </select>
            </div> 
            <div class="form-group" required>
                <label for="status">Status</label>
                <select name="status"  class="form-control">
                    <option value="To read">To read</option>
                    <option value="Reading">Reading</option>
                    <option value="Read">Read</option>
                </select>
            </div> 
      </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save the progress</button>
        </div>
       </form>
    </div>
  </div>
</div>